<Window x:Class="Social.server"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Social"
        mc:Ignorable="d"
        Background="#444444"
         Title="social" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="480*"/>
            <ColumnDefinition Width="163*"/>
            <ColumnDefinition Width="163*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="184*"/>
            <RowDefinition Height="33*"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="List" Foreground="#DDFFFFFF"  />
        <ListBox x:Name ="list2" Grid.Column="1" Grid.ColumnSpan="2" Foreground="#DDFFFFFF"/>
        <TextBox x:Name="box" Margin="0,368,0,0" Grid.RowSpan="2" TextChanged="box_TextChanged" Foreground="White"/>
        <Button x:Name="button1" Content="Отправить" Grid.Row="1" Grid.Column="1" Click="button1_Click" Width="100" Background="White" Foreground="#FF444444" />
        <Button  x:Name="button2" Content="Назад" Grid.Column="2" Grid.Row="1" Width="100" Click="button2_Click" Background="White" Foreground="#FF444444"/>
    </Grid>

</Window>
